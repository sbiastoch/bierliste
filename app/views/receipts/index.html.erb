<h1>Listing receipts</h1>
<div class="container">
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Category</th>
      <th>Description</th>
      <th>Date</th>
      <th>Type</th>
      <th>Amount</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <%#= render partial: "share_receipt", collection: @receipts %>
    <% @receipts.each do |receipt| %>
      <%#= render partial: receipt %>
      <%= render partial: 'simple_receipt', object: receipt if receipt.type=='SimpleReceipt'%>
      <%= render partial: 'share_receipt', object: receipt if receipt.type=='ShareReceipt'%>
    <% end %>
  </tbody>
</table>
  <%#= link_to 'New Receipt', new_receipt_path %>
</div>

