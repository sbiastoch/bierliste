<p id="notice"><%= notice %></p>


<div class="container">
  <h1>
    Beleg <%= @receipt.code %>
    <%= link_to 'Edit', edit_receipt_path(@receipt) %> |
    <%= link_to 'Back', receipts_path %>
  </h1>
  <div class="row span4">
    <table class="table table-striped table-bordered">
      <tbody>
      <tr>
        <td>
          <strong>Category:</strong>
          <%= @receipt.category_id %>
        </td>
      </tr>

      <tr>
        <td>
          <strong>Description:</strong>
          <%= @receipt.description %>
        </td>
      </tr>

      <tr>
        <td>
          <strong>Date:</strong>
          <%= @receipt.date %>
        </td>
      </tr>

      <tr>
        <td>
          <strong>Type:</strong>
          <%= @receipt.type %>
        </td>
      </tr>

      <tr>
        <td>
          <strong>Amount:</strong>
          <%= @receipt.amount %>
        </td>
      </tr>
      </tbody>
    </table>
  </div>
  <div class="row span7">

    <table class="table table-striped table-bordered">
      <thead>
      <tr>
        <th>Receipt</th>
        <th>Date</th>
        <th>Description</th>
        <th>Amount</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
      </thead>

      <tbody>
      <% @receipt.entries.each do |entry| %>
          <%= render partial: entry %>
      <% end %>
      </tbody>
    </table>

  </div>
</div>


